div.mod_embed_soundclick
{
    font-size: 10px;
    width: 480px;
    background: #eeeeee;
    border: 1px solid #ccc;
}

div.mod_embed_soundclick_player
{
    margin: 4px 4px 0px 4px;
}

div.mod_embed_soundclick_info
{
    white-space: nowrap;
    margin: 5px 5px 5px 5px;
    padding: 0px 0px 0px 39px;
    height: 15px;
    overflow: hidden;
    background-image: url({URL->HTTP_PATH}/mods/embed_soundclick/templates/audio.gif);
    background-position: 0px 0px;
    background-repeat: no-repeat;
}

div.mod_embed_soundclick_video
{
    float: left;
    font-size: 10px;
    width: 432px;
    background: #eeeeee;
    border: 1px solid #ccc;
}

div.mod_embed_soundclick_video_player
{
    margin: 4px 4px 0px 4px;
}

div.mod_embed_soundclick_video_info
{
    white-space: nowrap;
    margin: 5px 5px 5px 5px;
    padding: 0px 0px 0px 30px;
    height: 15px;
    overflow: hidden;
    background-image: url({URL->HTTP_PATH}/mods/embed_soundclick/templates/video.gif);
    background-position: 0px 0px;
    background-repeat: no-repeat;
}

